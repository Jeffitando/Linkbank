<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F6F6F6">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cartao">

    <include
        android:id="@+id/include18"
        layout="@layout/toolbar_seus_cartoes"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imgCartao"
        android:layout_width="370dp"
        android:layout_height="220dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/cardmodel1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include18" />

    <TextView
        android:id="@+id/textView115"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:text="07/28"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/imgCartao"
        app:layout_constraintTop_toBottomOf="@+id/textView113" />

    <TextView
        android:id="@+id/textView113"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="55dp"
        android:fontFamily="sans-serif"
        android:text="6212 5569 1459 4151"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imgCartao"
        app:layout_constraintStart_toStartOf="@+id/imgCartao" />

    <TextView
        android:id="@+id/textView114"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        tools:text="Dioges Mota"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/imgCartao"
        app:layout_constraintTop_toBottomOf="@+id/textView113" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="600dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCartao"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/btn_pagamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_smartphone"
                android:elevation="20dp"
                android:padding="16dp"
                android:text="Pagamento Online"
                android:textAlignment="textStart"
                android:textColor="@color/CorDeFundoAppMaisClara"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgCartao"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/btn_sacar_caixa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_sacar_dinheiro"
                android:elevation="20dp"
                android:padding="16dp"
                android:text="sacar dinheiro"
                android:textAlignment="textStart"
                android:textColor="@color/CorDeFundoAppMaisClara"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_pagamento"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_bloquear_cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_bloquear_cartao"
                android:elevation="20dp"
                android:padding="16dp"
                android:text="desbloquear / bloquear cartão"
                android:textAlignment="textStart"
                android:textColor="@color/CorDeFundoAppMaisClara"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_sacar_caixa"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_trocar_senha_cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_trocar_senha"
                android:elevation="20dp"
                android:padding="16dp"
                android:text="trocar senha"
                android:textAlignment="textStart"
                android:textColor="@color/CorDeFundoAppMaisClara"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_bloquear_cartao"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_segunda_via"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_new_card"
                android:elevation="20dp"
                android:padding="16dp"
                android:text="Pedir Segunda via"
                android:textAlignment="textStart"
                android:textColor="@color/CorDeFundoAppMaisClara"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_trocar_senha_cartao"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_seguro_cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_seguro_card"
                android:elevation="20dp"
                android:padding="16dp"
                android:text="Seguro do cartão"
                android:textAlignment="textStart"
                android:textColor="@color/CorDeFundoAppMaisClara"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_segunda_via"
                tools:ignore="ButtonStyle" />


            <Button
                android:id="@+id/btn_tiposContas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_tipos"
                android:elevation="20dp"
                android:padding="16dp"
                android:text="Tipos de Contas"
                android:textAlignment="textStart"
                android:textColor="@color/CorDeFundoAppMaisClara"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_segunda_via"
                tools:ignore="ButtonStyle" />


        </LinearLayout>


    </ScrollView>

    <TextView
        android:id="@+id/textView89"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SUA CONTA"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/CorDeFundoApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include18" />

    <TextView
        android:id="@+id/textView90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Comum"
        android:textColor="@color/TemaLaranja"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView89" />


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>