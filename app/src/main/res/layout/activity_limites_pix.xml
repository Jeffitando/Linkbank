<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE"
    tools:context=".limites_pix">

    <include
        android:id="@+id/include21"
        layout="@layout/toolbar_limites_pix" />


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include21">

        <Button
            android:id="@+id/btn_pix_mensal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_pix_mensal"
            android:elevation="20dp"
            android:padding="16dp"
            android:text="MENSAL"
            android:textAlignment="textStart"
            android:textColor="@color/CorDeFundoAppMaisClara"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_btn_pix_semanal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_semanal_pix"
            android:elevation="20dp"
            android:padding="16dp"
            android:text="SEMANAL"
            android:textAlignment="textStart"
            android:textColor="@color/CorDeFundoAppMaisClara"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ButtonStyle"
            tools:layout_editor_absoluteY="434dp" />


        <Button
            android:id="@+id/btn_pix_diario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_diario_pix"
            android:elevation="20dp"
            android:padding="16dp"
            android:text="DiÃ¡rio"
            android:textAlignment="textStart"
            android:textColor="@color/CorDeFundoAppMaisClara"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ButtonStyle"
            tools:layout_editor_absoluteY="604dp" />

        <Button
            android:id="@+id/btn_pix_agendado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_agendado_pix"
            android:elevation="20dp"
            android:padding="16dp"
            android:text="AGENDADO"
            android:textAlignment="textStart"
            android:textColor="@color/CorDeFundoAppMaisClara"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ButtonStyle"
            tools:layout_editor_absoluteY="685dp" />
        <Button
            android:id="@+id/btn_pix_perosonalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_pix_24"
            android:elevation="20dp"
            android:padding="16dp"
            android:text="PERSONALIZAR LIMITES DE PIX"
            android:textAlignment="textStart"
            android:textColor="@color/CorDeFundoAppMaisClara"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ButtonStyle"
            tools:layout_editor_absoluteY="685dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>