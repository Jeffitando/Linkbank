<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LinkBank" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/TemaLaranja</item>
        <item name="colorPrimaryVariant">@color/TemaLaranja</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/TemaLaranja</item>
        <item name="colorSecondaryVariant">@color/TemaLaranja</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/CorDeFundoApp</item>
        <!-- Customize your theme here. -->
    </style>


    //mudar cor do switch

    <style name="mySwitch">
        <item name="colorControlActivated">@color/TemaLaranja</item>
    </style>


    <style name="barraNotiicacao">
        <item name="colorControlActivated">#CC211695</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>


   //Dialog customizado

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="Theme.ProgressBar" parent ="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorAccent">@color/TemaLaranja</item>

    </style>

</resources>